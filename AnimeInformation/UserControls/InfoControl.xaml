<UserControl x:Class="AnimeInformation.UserControls.InfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:AnimeInformation.MVVM"
             xmlns:local="clr-namespace:AnimeInformation.UserControls"            
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:MainViewModel/>
    </UserControl.DataContext>

    <Grid>
        <StackPanel Width="300"
                        Background="White"
                        Height="450">
            <Image Source="{Binding ImagePath}"
                   Margin="0,20,0,0"
                   Height="200"
                   Width="200"/>

            <Label Content="{Binding Description}"
                   Foreground="Black"
                    Margin="0,20,0,0"
                    HorizontalContentAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"/>

            <Label Content="{Binding Seasons}"
                   HorizontalContentAlignment="Center"
                   Margin="0,40,0,0"
                   Width="50"
                   Height="35"
                   FontSize="20"
                   FontWeight="SemiBold"/>

            <TextBlock FontSize="16"                      
                       Width="115"
                       Margin="0,20,0,0"
                       Height="20">
               <Hyperlink NavigateUri="{Binding Link}" RequestNavigate="Hyperlink_RequestNavigate">
                  Information Site
               </Hyperlink>
            </TextBlock>

            <ComboBox Width="150"
                      Height="25"
                      ItemsSource="{Binding AnimeList}"
                      SelectedItem="{Binding SelectedAnime}"
                      Background="#c8cbcf"
                      BorderThickness="0"
                      Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
